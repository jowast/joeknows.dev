{
  "name": "resume-simulator",
  "private": "true",
  "version": "0.1.0",
  "description": "Personal resume website, including an interactive office environment.",
  "main": "src/main.ts",
  "scripts": {
    "gen-certs": "mkdir -p certs/ && openssl req -x509 -newkey rsa:4096 -keyout certs/key.pem -out certs/cert.pem -sha256 -days 365",
    "clean": "rm -rf public/build/ coverage/ certs/",
    "build:tailwind": "NODE_ENV=production postcss styles/tailwind.css -o public/build/main.css",
    "watch:tailwind": "postcss styles/tailwind.css -o public/build/main.css -w",
    "build:svelte": "rollup -c",
    "watch:svelte": "rollup -c -w",
    "build": "npm run build:tailwind && npm run build:svelte",
    "watch": "concurrently -n tailwind,svelte -c \"cyan.bold,yellow.bold\" \"npm run watch:tailwind\" \"npm run watch:svelte\"",
    "start:http": "sirv public --no-clear --host",
    "start:https": "sirv public --http2 --key certs/key.pem --cert certs/cert.pem --pass 'test' --no-clear --host ",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest --collect-coverage"
  },
  "author": "Joe Stanley",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/three": "^0.135.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cssnano": "^5.1.13",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "rollup": "^2.61.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.14",
    "svelte": "^3.44.3",
    "svelte-check": "^2.2.10",
    "svelte-preprocess": "^4.10.0",
    "tailwindcss": "^2.2.19",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "three": "^0.135.0"
  }
}
